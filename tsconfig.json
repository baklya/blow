{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "emitDecoratorMetadata": true,
	"allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": false,
	"importHelpers": true,
	"esModuleInterop": true,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "es2017"
        ],
        "types": [
            "babylonjs",
            "babylonjs-gui",
            "babylonjs-procedural-textures",
            "babylonjs-materials"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
